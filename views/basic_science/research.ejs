 <%- include('../partials/head2') %>
<body>
  <%- include('../partials/nav') %>
  <div class="bgin pb-20 w-full min-h-screen bg-white text-[#00457b]">
    <div class="w-full lg:h-[100px] md:h-[70px] h-[85px]"></div>

    <div class="mainContent w-full">
      <div
      class="routes w-full px-6 md:px-20 lg:md:px-44 px-2 flex flex-wrap items-center gap-2 md:gap-4 bg-[#00457b] py-3 md:py-5">
      <a class="text-xs md:text-sm font-medium hover:text-[#f26e32] uppercase inline-block text-white"
          href="/">Home <i class="ri-arrow-right-s-line text-md"></i>
      </a>
      <a class="text-xs md:text-sm font-medium hover:text-[#f26e32] uppercase inline-block text-white"
          href="/basic_science/aboutDepartment">Basic Science <i class="ri-arrow-right-s-line text-md"></i>
      </a>
      <a class="text-xs md:text-sm font-medium hover:text-[#f26e32] uppercase inline-block text-white"
          href="#">Research <i class="ri-arrow-right-s-line text-md"></i>
      </a>
  </div>


      <div class="content md:px-4 px-2 md:md:px-44 px-2 mt-16 mb-10">
        <h2 class="text-lg md:text-2xl uppercase font-bold text-[#00457b]">Research</h2>
        <div class="w-full h-[1px] bg-zinc-300 mt-2"></div>
        
        <h4 class="text-md mt-5 font-bold">
          The Department of Basic Sciences has experienced Faculty members with diverse research interests.
        </h4>
        
        <!-- Areas of Specialization -->
        <% if (areasOfSpecialization && areasOfSpecialization.length > 0) { %>
          <h3 class="text-xl font-semibold mt-8 mb-4">Areas of Specialization</h3>
          <div class="overflow-x-auto mt-4">
          <table class="lg:text-[1vw] md:text-[1.5vw] text-[2vw] min-w-full border border-gray-300">
              <thead>
                <tr class="text-white bg-[#00457b]">
                  <th class="md:px-4 px-2 py-2 border-r border-gray-300 text-left">Name</th>
                  <th class="md:px-4 px-2 py-2 border-r border-gray-300 text-left">Specialization</th>
                </tr>
              </thead>
              <tbody>
                <% areasOfSpecialization.forEach(spec => { %>
                  <tr class="border-b">
                    <td class="md:px-4 px-2 py-2 border-r border-gray-300"><%= spec.name %></td>
                    <td class="md:px-4 px-2 py-2 border-r border-gray-300"><%= spec.areaOfSpecialization %></td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } %>

        <!-- Research Areas -->
        <% if (researchAreas && researchAreas.length > 0) { %>
          <h3 class="text-xl font-semibold mt-8 mb-4">Research Areas</h3>
          <div class="mt-4 md:px-4 px-2">
            <% researchAreas.forEach(area => { %>
              <div class="mb-4">
                <h4 class="text-lg font-semibold"><%= area.title %></h4>
                <ul class="list-disc pl-6">
                  <% area.description.forEach(desc => { %>
                    <li><%= desc %></li>
                  <% }); %>
                </ul>
              </div>
            <% }); %>
          </div>
        <% } %>

        <!-- Research Fields -->
        <% if (researchFields && researchFields.length > 0) { %>
          <h3 class="text-xl font-semibold mt-8 mb-4">Research Fields</h3>
          <div class="mt-4 md:px-4 px-2">
            <% researchFields.forEach(field => { %>
              <ul class="list-disc pl-6">
                <% field.description.forEach(desc => { %>
                  <li><%= desc %></li>
                <% }); %>
              </ul>
            <% }); %>
          </div>
        <% } %>

        <!-- Publication Areas -->
        <% if (publicationAreas && publicationAreas.length > 0) { %>
          <h3 class="text-xl font-semibold mt-8 mb-4">Publication Areas</h3>
          <div class="mt-4 md:px-4 px-2">
            <% publicationAreas.forEach(area => { %>
              <ul class="list-disc pl-6">
                <% area.description.forEach(desc => { %>
                  <li><%= desc %></li>
                <% }); %>
              </ul>
            <% }); %>
          </div>
        <% } %>

        <!-- Patents -->
        <% if (patents && patents.length > 0) { %>
          <h3 class="text-xl font-semibold mt-8 mb-4">Patents</h3>
          <div class="overflow-x-auto">
          <table class="lg:text-[1vw] md:text-[1.5vw] text-[2vw] min-w-full border border-gray-300">
              <thead>
                <tr class="text-white bg-[#00457b]">
                  <th class="md:px-4 px-2 py-2 border-r border-gray-300 text-left">Inventor(s)</th>
                  <th class="md:px-4 px-2 py-2 border-r border-gray-300 text-left">Patent No</th>
                  <th class="md:px-4 px-2 py-2 border-r border-gray-300 text-left">State</th>
                  <th class="md:px-4 px-2 py-2 border-r border-gray-300 text-left">Title</th>
                </tr>
              </thead>
              <tbody>
                <% patents.forEach(p => { %>
                  <tr class="border-b">
                    <td class="md:px-4 px-2 py-2 border-r border-gray-300"><%= p.inventor.join(', ') %></td>
                    <td class="md:px-4 px-2 py-2 border-r border-gray-300"><%= p.patentNo %></td>
                    <td class="md:px-4 px-2 py-2 border-r border-gray-300"><%= p.state %></td>
                    <td class="md:px-4 px-2 py-2 border-r border-gray-300"><%= p.title %></td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } %>

        <!-- Publications -->
        <% if (publicationsByYear) { %>
          <h3 class="text-xl font-semibold mt-8 mb-4">Publications</h3>

          <!-- Book Chapters -->
          <% if (publicationsByYear.bookChapters && Object.keys(publicationsByYear.bookChapters).length > 0) { %>
            <h4 class="text-lg font-semibold mt-6 mb-2">Book Chapters</h4>
            <% Object.keys(publicationsByYear.bookChapters).forEach(year => { %>
              <div class="mb-4">
                <h5 class="text-md font-semibold"><%= year %></h5>
                <ul class="list-disc pl-6">
                  <% publicationsByYear.bookChapters[year].forEach(chapter => { %>
                    <% chapter.description.forEach(desc => { %>
                      <li><%= desc %></li>
                    <% }); %>
                  <% }); %>
                </ul>
              </div>
            <% }); %>
          <% } %>

          <!-- Conference Papers -->
          <% if (publicationsByYear.conferencePapers && Object.keys(publicationsByYear.conferencePapers).length > 0) { %>
            <h4 class="text-lg font-semibold mt-6 mb-2">Conference Papers</h4>
            <% Object.keys(publicationsByYear.conferencePapers).forEach(year => { %>
              <div class="mb-4">
                <h5 class="text-md font-semibold"><%= year %></h5>
                <ul class="list-disc pl-6">
                  <% publicationsByYear.conferencePapers[year].forEach(paper => { %>
                    <% paper.description.forEach(desc => { %>
                      <li><%= desc %></li>
                    <% }); %>
                  <% }); %>
                </ul>
              </div>
            <% }); %>
          <% } %>

          <!-- Journals -->
          <% if (publicationsByYear.journals && Object.keys(publicationsByYear.journals).length > 0) { %>
            <h4 class="text-lg font-semibold mt-6 mb-2">Journals</h4>
            <% Object.keys(publicationsByYear.journals).forEach(year => { %>
              <div class="mb-4">
                <h5 class="text-md font-semibold"><%= year %></h5>
                <ul class="list-disc pl-6">
                  <% publicationsByYear.journals[year].forEach(journal => { %>
                    <% journal.description.forEach(desc => { %>
                      <li><%= desc %></li>
                    <% }); %>
                  <% }); %>
                </ul>
              </div>
            <% }); %>
          <% } %>
        <% } %>
      </div>
    </div>
  </div>
  <%- include('../partials/footer') %>
  <%- include('../partials/tail2') %>
</body>

