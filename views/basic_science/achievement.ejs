<%- include('../partials/head2') %> 
<body>
  <%- include('../partials/nav') %> 
  <div class="bgin  w-full min-h-screen bg-white text-black">
    <div class="w-full lg:h-[100px] md:h-[80px]"></div>

    <div class="mainContent w-full">
      <div class="routes w-full px-44 flex items-center gap-4 bg-[#00457b] py-5">
        <a class="text-sm font-medium hover:text-blue-400 uppercase inline-block text-white"
           href="/">Home <i class="ri-arrow-right-s-line text-md"></i></a>
        <a class="text-sm font-medium hover:text-blue-400 uppercase inline-block text-white"
           href="/basic_science/aboutDepartment">Basic Sciences <i class="ri-arrow-right-s-line text-md"></i></a>
        <a class="text-sm font-medium hover:text-blue-400 uppercase inline-block text-white"
           href="#">Achievements</a>
      </div>

      <div class="content px-44 mt-16 mb-10">
        <h2 class="text-2xl uppercase font-bold text-black">Achievements</h2>
        <div class="w-full h-[1px] bg-zinc-300 mt-2"></div>

        <% sortedYears.forEach(year => { %>
          <div>
            <h2 class="text-xl mt-5 font-bold"><%= year %>:</h2>
            <ol class="text-ms mt-5 pl-12 text-black list-disc">
              <% achievementsByYear[year].forEach(achievement => { %>
                <li>
                  <% if (achievement.title) { %>
                    <h4 class="text-lg font-bold m-2 mt-4 mb-2"><%= achievement.title %></h4>
                  <% } %>
                  <% achievement.description.forEach(desc => { %>
                    <h4 class="text-lg m-2 mt-2 mb-4"><%= desc %></h4>
                  <% }) %>
                </li>
              <% }) %>
            </ol>
          </div>
        <% }) %>

        <% if (sortedYears.length === 0) { %>
          <div class="mt-10 text-center">
            <h3 class="text-xl text-gray-600">No achievements found</h3>
          </div>
        <% } %>
      </div>
    </div>
  </div>
  <%- include('../partials/footer') %> 
</body>
<%- include('../partials/tail2') %>
