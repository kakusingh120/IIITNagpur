<%- include('../partials/head2') %> 
  <body>
    <%- include('../partials/nav') %> 

    <!-- Spacer -->
    <div class="w-full lg:h-[100px] md:h-[70px] h-[85px]"></div>
    
    <div class="bg-white pb-8">
    <!-- Club Header Banner -->
    <section class="relative bg-white h-[300px] md:h-[350px] lg:h-[400px] bg-cover bg-center bg-no-repeat clip-right-slant"
      style="background-image: url('<%= club.logo %>');">
      <div class="absolute inset-0 bg-black/70">
      <div class="relative z-10 flex flex-col items-center justify-center h-full text-white text-center px-6">
          <h2 class="text-5xl md:text-8xl font-bold text-glow"><%= club.title %></h2>
      </div>
    </section>

    <!-- Club Description Section -->
   <!-- Club Description Section -->
<section class="flex flex-col md:flex-row items-center justify-center bg-white px-[4vw] py-[4vw] lg:pl-20 lg:pl-40 lg:-pt-[2vw]">
  <!-- About Club Box -->
  <div class="w-full sm:w-[45vh] md:w-[40vw] lg:w-[30vw] min-h-[20vw] 
       text-left border border-gray-300 shadow-lg rounded-md p-[3vw] 
       flex flex-col justify-between overflow-hidden bg-white">
    <h3 class="text-[5vw] md:text-[2.5vw] lg:text-[1.75vw] text-gray-800 pt-[1vw]">
      <%= club.title %>
    </h3>
    <p class="mt-[2vw] md:mt-[1vw] text-gray-700 text-[2vw] md:text-[1.5vw] lg:text-[1vw] leading-tight">
      <%= club.description %>
    </p>
  </div>

  <!-- Club Image -->
  <% if (club.images && club.images.length > 0) { %>
    <div class="w-full md:w-[40vw] flex justify-center relative mt-[4vw] md:mt-0">
      <img src="<%= club.images[0] %>" alt="<%= club.title %> Image" 
           class="w-[50vw] h-[40vw] sm:w-[50vw] sm:h-[35vw] md:w-[35vw] md:h-[30vw] 
                  lg:w-[27vw] lg:h-[23vw] object-cover shadow-lg rounded-md">
    </div>
  <% } %>
</section>

    <!-- Events Slider -->
    <h1 class="font-bold text-[#00457b] text-center lg:text-[3vw] md:text-[4vw] text-[6vw] mb-2 uppercase pt-2 pb-5">
      Events Organised
    </h1>
    <div class="lg:w-[90vw] lg:h-[80vh] w-[95%] h-[50%] mx-auto">
      <div class="swiper mySwiper5 relative overflow-hidden">
        <div class="swiper-wrapper">
          <% events.forEach(function(event){ %>
            <div class="swiper-slide relative overflow-hidden">
              <div
                class="dets-box bg-[black]/60 md:w-[300px] md:h-[300px] w-[150px] h-[150px] absolute lg:bottom-[40px] bottom-[25px] lg:right-[50px] right-[30px] z-[99] text-white p-[10px]">
                <p class="md:py-8 md:py-2 md:text-[16px] text-[7.5px]">
                  <strong><%= event.title %></strong> <br>
                  <%= event.description %>
                </p>
              </div>
              <div
                class="dets flex items-center justify-center lg:w-[60px] w-[40px] lg:h-[60px] h-[40px] rounded-full bg-[black]/90 absolute lg:bottom-[30px] md:bottom-[15px] bottom-[10px] lg:right-[40px] md:right-[15px] right-[10px] z-[100] text-white">
                <i class="ri-lightbulb-line bulb text-white lg:text-[25px] text-[15px]"></i>
              </div>
              <img class="w-full h-full object-cover" src="<%= event.images[0] %>" alt="<%= event.title %>" loading="lazy"/>
            </div>
          <% }) %>
        </div>
        <div class="swiper-pagination"></div>
      </div>
    </div>

    <!-- Club Yearly Plans Section -->
    <% if(club.yearlyPlans && club.yearlyPlans.length > 0) { %>
    <section class="bg-white px-[4vw] py-[4vw]">
      <h1 class="font-bold text-[#00457b] text-center lg:text-[3vw] md:text-[4vw] text-[6vw] mb-2 uppercase pt-2 pb-5">
        Yearly Plans
      </h1>
      <div class="flex flex-wrap gap-4 justify-center">
        <% club.yearlyPlans.forEach(function(plan){ %>
          <div class="border-2 border-[#1e5b94] rounded-lg p-[2vw] bg-white w-[90%] md:w-[40%] lg:w-[30%] hover:transform hover:scale-105 transition-all duration-300">
            <h3 class="font-bold text-xl mb-3 text-[#00457b]"><%= plan.title %></h3>
            <div class="w-16 h-1 bg-[#1e5b94] mb-3"></div>
            <p class="text-gray-700 text-sm leading-relaxed"><%= plan.description %></p>
          </div>
        <% }) %>
      </div>
    </section>
    <% } %>
</div>
    <%- include('../partials/footer') %> 
  </body>
