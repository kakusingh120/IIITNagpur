<% layout('./admin/layout/boilerplate.ejs') -%>

<body>
  <div class="mt-5 mb-4 p-4 text-center">
    <h1>Home Page of admin panel</h1>
  </div>
  <div class="container mt-4">
    <div class="row mb-3">
      <div class="col-4">
        <a href="/admin/photoCarousel" class="text-decoration-none">
          <div class="h-100 w-100 bg-primary p-4 rounded text-white text-center hover-effect">
            <h3 class="fw-bold"><i class="bi bi-images me-2"></i>Photo Carousel</h3>
          </div>
        </a>
      </div>
      <div class="col-4">
        <a href="/admin/notice" class="text-decoration-none">
          <div class="h-100 w-100 bg-danger p-4 rounded text-white text-center hover-effect">
            <h3 class="fw-bold"><i class="bi bi-clipboard me-2"></i>Notice</h3>
          </div>
        </a>
      </div>
      <div class="col-4">
        <a href="/admin/notification" class="text-decoration-none">
          <div class="h-100 w-100 bg-success p-4 rounded text-white text-center hover-effect">
            <h3 class="fw-bold"><i class="bi bi-bell me-2"></i>Notification</h3>
          </div>
        </a>
      </div>
    </div>
    
    <div class="row mb-3">
      <div class="col-4">
        <a href="/admin/achievements" class="text-decoration-none">
          <div class="h-100 w-100 bg-warning p-4 rounded text-white text-center hover-effect">
            <h3 class="fw-bold"><i class="bi bi-trophy me-2"></i>Achievements</h3>
          </div>
        </a>
      </div>
      <div class="col-4">
        <a href="/admin/studentTestimonial" class="text-decoration-none">
          <div class="h-100 w-100 bg-info p-4 rounded text-white text-center hover-effect">
            <h3 class="fw-bold"><i class="bi bi-chat-quote me-2"></i>Student Testimonials</h3>
          </div>
        </a>
      </div>
      <div class="col-4">
        <a href="/admin/faculty" class="text-decoration-none">
          <div class="h-100 w-100 bg-dark p-4 rounded text-white text-center hover-effect">
            <h3 class="fw-bold"><i class="bi bi-person-badge me-2"></i>Faculty</h3>
          </div>
        </a>
      </div>
    </div>
    
    <div class="row mb-3">
      <div class="col-4">
        <a href="/admin/media" class="text-decoration-none">
          <div class="h-100 w-100 bg-purple p-4 rounded text-white text-center hover-effect">
            <h3 class="fw-bold"><i class="bi bi-collection-play me-2"></i>Media</h3>
          </div>
        </a>
      </div>
      <div class="col-4">
        <a href="/admin/research" class="text-decoration-none">
          <div class="h-100 w-100 bg-teal p-4 rounded text-white text-center hover-effect">
            <h3 class="fw-bold"><i class="bi bi-journal-medical me-2"></i>Research</h3>
          </div>
        </a>
      </div>
      <div class="col-4">
        <a href="/admin/club" class="text-decoration-none">
          <div class="h-100 w-100 bg-indigo p-4 rounded text-white text-center hover-effect">
            <h3 class="fw-bold"><i class="bi bi-people me-2"></i>Club</h3>
          </div>
        </a>
      </div>
    </div>
    
    <div class="row mb-3">
      <div class="col-4">
        <a href="/admin/event" class="text-decoration-none">
          <div class="h-100 w-100 bg-orange p-4 rounded text-white text-center hover-effect">
            <h3 class="fw-bold"><i class="bi bi-calendar-event me-2"></i>Event</h3>
          </div>
        </a>
      </div>
      <div class="col-4">
        <a href="/admin/organisedEvent" class="text-decoration-none">
          <div class="h-100 w-100 bg-secondary p-4 rounded text-white text-center hover-effect">
            <h3 class="fw-bold"><i class="bi bi-calendar-check me-2"></i>Organised Event</h3>
          </div>
        </a>
      </div>
      <div class="col-4">
        <a href="/admin/deptAchievement" class="text-decoration-none">
          <div class="h-100 w-100 bg-pink p-4 rounded text-white text-center hover-effect">
            <h3 class="fw-bold"><i class="bi bi-award me-2"></i>Department Achievements</h3>
          </div>
        </a>
      </div>
    </div>
    
    <div class="row mb-3">
      <div class="col-4">
        <a href="/admin/deptProject" class="text-decoration-none">
          <div class="h-100 w-100 bg-cyan p-4 rounded text-white text-center hover-effect">
            <h3 class="fw-bold"><i class="bi bi-briefcase me-2"></i>Department Projects</h3>
          </div>
        </a>
      </div>
      <div class="col-4">
        <a href="/admin/deptEvent" class="text-decoration-none">
          <div class="h-100 w-100 bg-blue p-4 rounded text-white text-center hover-effect">
            <h3 class="fw-bold"><i class="bi bi-calendar-week me-2"></i>Department Events</h3>
          </div>
        </a>
      </div>
      <div class="col-4">
        <a href="/admin/departmentResearch" class="text-decoration-none">
          <div class="h-100 w-100 bg-teal p-4 rounded text-white text-center hover-effect">
            <h3 class="fw-bold"><i class="bi bi-lightbulb me-2"></i>Department Research</h3>
          </div>
        </a>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-4">
        <a href="/admin/facultyUser" class="text-decoration-none">
          <div class="h-100 w-100 bg-secondary p-4 rounded text-white text-center hover-effect">
            <h3 class="fw-bold"><i class="bi bi-person-lines-fill me-2"></i>Faculty Users</h3>
          </div>
        </a>
      </div>
    </div>
  </div>

  <style>
    .bg-purple {
      background-color: #6f42c1;
    }

    .bg-teal {
      background-color: #20c997;
    }

    .bg-indigo {
      background-color: #6610f2;
    }

    .bg-orange {
      background-color: #fd7e14;
    }

    .bg-pink {
      background-color: #e83e8c;
    }

    .bg-cyan {
      background-color: #0dcaf0;
    }

    .bg-blue {
      background-color: #0d6efd;
    }

    .hover-effect:hover {
      box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, .25);
      transform: translateY(-3px);
      transition: all 0.3s ease;
      opacity: 0.9;
    }
  </style>
</body>