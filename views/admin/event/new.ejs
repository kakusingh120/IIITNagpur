<% layout('./admin/layout/boilerplate.ejs') -%>
<body>
    <div class="container mt-4">
        <h2 class="mb-4">Add New Event</h2>
        <form action="/admin/event" method="POST">
            <div class="mb-3">
                <label for="title" class="form-label">Title*</label>
                <input type="text" class="form-control" id="title" name="data[title]" required>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description*</label>
                <textarea class="form-control" id="description" name="data[description]" required></textarea>
            </div>
            <div class="mb-3">
                <label for="logo" class="form-label">Logo URL</label>
                <input type="text" class="form-control" id="logo" name="data[logo]">
            </div>
            <div class="mb-3">
                <label for="guests" class="form-label">Guests</label>
                <input type="text" class="form-control" id="guests" name="data[guests]" placeholder="Separate guests with commas">
                <small class="form-text text-muted">Enter guest names separated by commas</small>
            </div>
            <div class="mb-3">
                <label for="images" class="form-label">Images</label>
                <input type="text" class="form-control" id="images" name="data[images]" placeholder="Separate image URLs with commas">
                <small class="form-text text-muted">Enter image URLs separated by commas</small>
            </div>
            <div class="mb-3">
                <label for="brochure" class="form-label">Brochure URLs</label>
                <input type="text" class="form-control" id="brochure" name="data[brochure]" placeholder="Separate brochure URLs with commas">
                <small class="form-text text-muted">Enter brochure URLs separated by commas</small>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</body>
