<% layout('./admin/layout/boilerplate.ejs') -%>

<body>
    <div class="container mt-4">
        <h2 class="p-4 text-center"> Add New Department Project</h2>
        <form action="/admin/deptProject" method="POST">

            <!-- Faculty -->
            <div class="mb-3">
                <label class="form-label">Faculty</label>
                <input type="text" name="faculty" class="form-control" placeholder="Enter faculty name" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Type of Project</label>
                <input type="text" name="typeOfProject" class="form-control" placeholder="Enter type of project" >
            </div>

            <!-- Title of Project -->
            <div class="mb-3">
                <label class="form-label">Title of Project</label>
                <input type="text" name="titleofProject" class="form-control" placeholder="Enter project title" required>
            </div>

            <!-- Year -->
            <div class="mb-3">
                <label class="form-label">Year</label>
                <input type="text" name="year" class="form-control" placeholder="Enter year (e.g., 2025)" >
            </div>

            <!-- Sponsoring Agency -->
            <div class="mb-3">
                <label class="form-label">Sponsoring Agency</label>
                <input type="text" name="sponsoringAgency" class="form-control" placeholder="Enter sponsoring agency" required>
            </div>

            <!-- Funding Amount -->
            <div class="mb-3">
                <label class="form-label">Funding Amount</label>
                <input type="number" name="fundingAmount" class="form-control" placeholder="Enter funding amount" required>
            </div>

            <!-- Department -->
            <div class="mb-3">
                <label class="form-label">Department</label>
                <select name="department" class="form-control" required>
                    <option value="" disabled selected>Select Department</option>
                    <option value="bs">Basic Sciences</option>
                    <option value="cse">Computer Science & Engineering</option>
                    <option value="ece">Electronics & Communication Engineering</option>
                </select>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-success">
                <i class="fas fa-plus-circle"></i> Add Project
            </button>
            <a href="/admin/deptProject" class="btn btn-secondary">Cancel</a>

        </form>
    </div>
</body>
