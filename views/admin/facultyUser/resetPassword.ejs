<% layout('./admin/layout/boilerplate.ejs') -%>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title mb-4">Reset Password for Faculty User</h2>
          
          <div class="mb-4">
            <p><strong>Name:</strong> <%= faculty?.name || 'Unknown' %></p>
            <p><strong>Username:</strong> <%= facultyUser.username %></p>
            <p><strong>Email:</strong> <%= facultyUser.email %></p>
          </div>

          <form action="/admin/facultyUser/resetPassword/<%= facultyUser._id %>" method="POST">
            <div class="mb-3">
              <label for="password" class="form-label">New Password</label>
              <input 
                type="password" 
                id="password" 
                name="password" 
                required
                class="form-control"
              >
            </div>
            
            <div class="mb-3">
              <label for="confirmPassword" class="form-label">Confirm New Password</label>
              <input 
                type="password" 
                id="confirmPassword" 
                name="confirmPassword" 
                required
                class="form-control"
              >
            </div>
            
            <div class="d-flex justify-content-between">
              <button 
                type="submit" 
                class="btn btn-primary"
              >
                Reset Password
              </button>
              <a 
                href="/admin/facultyUser" 
                class="btn btn-link"
              >
                Cancel
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
