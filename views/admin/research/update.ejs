<% layout('./admin/layout/boilerplate.ejs') -%>
<body>
    <div class="container mt-4">
        <h2 class="mb-4">Update Research</h2>
        <form action="/admin/research/<%= data._id %>?_method=PATCH" method="POST">
            <div class="mb-3">
                <label for="title" class="form-label">Title*</label>
                <input type="text" value="<%= data.title %>" class="form-control" id="title" name="data[title]" required>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea class="form-control" id="description" name="data[description]"><%= data.description %></textarea>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Image URL</label>
                <input type="text" value="<%= data.image %>" class="form-control" id="image" name="data[image]">
            </div>
            <div class="mb-3">
                <label for="link" class="form-label">Link</label>
                <input type="text" value="<%= data.link || 'https://iiitn.ac.in' %>" class="form-control" id="link" name="data[link]">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</body>
