<% layout('./admin/layout/boilerplate.ejs') -%>

<body>
    <div class="container mt-4">
        <h2 class="p-4">Research</h2>
        <div class="d-flex justify-content-end p-4">
                <a href="/admin/research/new" class="btn btn-primary">Add New Research</a>
        </div>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <% data.forEach(item => { %>
            <div class="col">
                <div class="card h-100">
                    <% if (item.image) { %>
                        <img src="<%= item.image %>" class="card-img-top" alt="Research Image" style="width:100%; height:200px; object-fit:cover;" />
                    <% } %>
                    <div class="card-body">
                        <h5 class="card-title"><%= item.title %></h5>
                        <p class="card-text"><%= item.description %></p>
                        <a href="<%= item.link %>" class="btn btn-primary mb-2" target="_blank">Visit Link</a>
                        <div class="d-flex gap-2">
                            <a href="/admin/research/<%= item._id %>" class="btn btn-success">Edit</a>
                            <form action="/admin/research/<%= item._id %>?_method=DELETE" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this research item?')">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </div>
</body>