<%- layout("admin/layout/boilerplate") %>

<div class="container-xl px-4 mt-5">
  <div class="row">
    <div class="col-xl-12">
      <div class="card mb-4">
        <div class="card-header">Research Areas</div>
        <div class="card-body">
          <a href="/admin/departmentResearch/researchArea/new" class="btn btn-primary mb-3">Add New Research Area</a>
          
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Title</th>
                <th>Department</th>
                <th>Description</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% data.forEach(area => { %>
                <tr>
                  <td><%= area.title %></td>
                  <td><%= area.department.toUpperCase() %></td>
                  <td>
                    <ul>
                      <% area.description.forEach(desc => { %>
                        <li><%= desc %></li>
                      <% }) %>
                    </ul>
                  </td>
                  <td>
                    <a href="/admin/departmentResearch/researchArea/<%= area._id %>" class="btn btn-warning btn-sm">Edit</a>
                    <form action="/admin/departmentResearch/researchArea/<%= area._id %>?_method=DELETE" method="POST" style="display: inline;">
                      <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this research area?')">Delete</button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
