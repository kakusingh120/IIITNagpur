<%- layout("admin/layout/boilerplate") %>

<div class="container-xl px-4 mt-5">
  <div class="row">
    <div class="col-xl-12">
      <div class="card mb-4">
        <div class="card-header">Edit Research Area</div>
        <div class="card-body">
          <form action="/admin/departmentResearch/researchArea/<%= result._id %>?_method=PATCH" method="POST">
            
            <div class="mb-3">
              <label for="title" class="form-label">Title</label>
              <input 
                type="text" 
                class="form-control" 
                id="title" 
                name="title" 
                value="<%= result.title %>" 
                required
              >
            </div>

            <div class="mb-3">
              <label for="department" class="form-label">Department</label>
              <select class="form-control" id="department" name="department" required>
                <option value="cse" <%= result.department === 'cse' ? 'selected' : '' %>>CSE</option>
                <option value="ece" <%= result.department === 'ece' ? 'selected' : '' %>>ECE</option>
                <option value="bs" <%= result.department === 'bs' ? 'selected' : '' %>>BS</option>
              </select>
            </div>

            <div class="mb-3">
              <label for="description" class="form-label">Description (Line-separated)</label>
              <textarea 
                class="form-control" 
                id="description" 
                name="description" 
                rows="5"
                required
              ><%= descriptionText %></textarea>
            </div>

            <div class="d-flex justify-content-between">
              <button type="submit" class="btn btn-primary">Update</button>
              <a href="/admin/departmentResearch/researchArea" class="btn btn-secondary">Cancel</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
