<%- layout("admin/layout/boilerplate") %>

<div class="container-xl px-4 mt-5">
  <div class="row">
    <div class="col-xl-12">
      <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
          <span>Research Fields</span>
          <a href="/admin/departmentResearch/researchField/new" class="btn btn-primary">Add New</a>
        </div>
        <div class="card-body">
          <table class="table table-bordered table-striped">
            <thead>
              <tr>
                <th>Department</th>
                <th>Description</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% data.forEach(field => { %>
                <tr>
                  <td><%= field.department.toUpperCase() %></td>
                  <td>
                    <ul>
                      <% field.description.forEach(desc => { %>
                        <li><%= desc %></li>
                      <% }) %>
                    </ul>
                  </td>
                  <td>
                    <a href="/admin/departmentResearch/researchField/<%= field._id %>" class="btn btn-warning btn-sm">Edit</a>
                    <form 
                      action="/admin/departmentResearch/researchField/<%= field._id %>?_method=DELETE" 
                      method="POST"
                      class="d-inline"
                    >
                      <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
