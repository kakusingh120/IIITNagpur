<%- layout("admin/layout/boilerplate") %>

<div class="container-xl px-4 mt-5">
  <div class="row">
    <div class="col-xl-12">
      <div class="card mb-4">
        <div class="card-header">Update Area of Specialization</div>
        <div class="card-body">
          <form action="/admin/departmentResearch/areaOfSpecialization/<%= data._id %>?_method=PATCH" method="POST">
            <div class="mb-3">
              <label for="name" class="form-label">Faculty Name</label>
              <input type="text" class="form-control" id="name" name="data[name]" value="<%= data.name %>" required>
            </div>
            
            <div class="mb-3">
              <label for="areaOfSpecialization" class="form-label">Area of Specialization</label>
              <textarea class="form-control" id="areaOfSpecialization" name="data[areaOfSpecialization]" rows="3" required><%= data.areaOfSpecialization %></textarea>
            </div>
            
            <div class="mb-3">
              <label for="department" class="form-label">Department</label>
              <select class="form-control" id="department" name="data[department]" required>
                <option value="">Select Department</option>
                <option value="cse" <%= data.department === 'cse' ? 'selected' : '' %>>CSE</option>
                <option value="ece" <%= data.department === 'ece' ? 'selected' : '' %>>ECE</option>
                <option value="bs" <%= data.department === 'bs' ? 'selected' : '' %>>Basic Sciences</option>
              </select>
            </div>
            
            <div class="d-flex justify-content-between">
              <button type="submit" class="btn btn-primary">Update</button>
              <a href="/admin/departmentResearch/areaOfSpecialization" class="btn btn-secondary">Cancel</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
