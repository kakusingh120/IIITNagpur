<% layout('./admin/layout/boilerplate.ejs') -%>

<body>
    <div class="container mt-4">
        <h2 class="p-4 text-center">Department Events</h2>

        <!-- Add New Event Button -->
        <div class="d-flex justify-content-end p-4">
            <a href="/admin/deptEvent/new" class="btn btn-primary">
                <i class="fas fa-plus-circle"></i> Add New Event
            </a>
        </div>

        <!-- Events Grid -->
        <div class="row row-cols-1 row-cols-md-2 g-4">
            <% data.forEach(event => { %> 
            <div class="col">
                <div class="card h-100 shadow-lg border-0 rounded-3">
                    
                    <div class="card-body">
                        <!-- Event Year & Description -->
                        <h5 class="card-title text-muted"><i class="fas fa-calendar-alt"></i> <%= event.year %></h5>
                        <!-- <p class="card-text"><%= event.description %></p> -->
                        
                        <!-- Department Badge -->
                        <span class="badge bg-info mb-2">
                            <%= event.department ? event.department.toUpperCase() : "N/A" %>
                        </span>

                        <!-- Action Buttons -->
                        <div class="d-flex gap-2">
                            <a href="/admin/deptEvent/<%= event._id %>" class="btn btn-warning">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <form action="/admin/deptEvent/<%= event._id %>?_method=DELETE" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this event?')">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </div>
</body>
