<%- include('../partials/head2') %> 
<body>
  <%- include('../partials/nav') %> 
  <div class="bgin pb-20 w-full min-h-screen bg-white text-[#00457b]">
    <div class="w-full lg:h-[100px] md:h-[70px] h-[85px]"></div>
    <div class="mainContent w-full">
      <div
      class="routes w-full px-6 md:px-20 lg:px-44 flex flex-wrap items-center gap-2 md:gamd:p-4 p-[4px] bg-[#00457b] py-3 md:py-5">
      <a class="text-xs md:text-sm font-medium hover:text-[#f26e32] uppercase inline-block text-white"
          href="/">Home <i class="ri-arrow-right-s-line text-md"></i>
      </a>
      <a class="text-xs md:text-sm font-medium hover:text-[#f26e32] uppercase inline-block text-white"
          href="/cse/aboutDepartment">Computer Science & Eng... <i class="ri-arrow-right-s-line text-md"></i>
      </a>
      <a class="text-xs md:text-sm font-medium hover:text-[#f26e32] uppercase inline-block text-white"
          href="#">Projects <i class="ri-arrow-right-s-line text-md"></i>
      </a>
  </div>

      <div class="content px-10 mt-16 mb-10">
        <h2 class="text-lg md:text-2xl uppercase font-bold text-[#00457b]">Projects</h2>
        <div class="w-full h-[1px] bg-zinc-300 mt-2"></div>

        <!-- Ongoing Projects -->
        <h3 class="text-2xl font-semibold mt-8 mb-4">Ongoing Projects</h3>
        <div class="overflow-x-auto">
          <table class="w-full table-auto border-collapse border border-zinc-400 overflow-hidden lg:text-[1vw] md:text-[1.5vw] text-[2vw]">
            <thead class="bg-gray-200">
                <tr class="border border-zinc-400 bg-[#00457b] text-white">
                    <th class="md:p-4 p-[4px] border border-zinc-400">Sl. No.</th>
                    <th class="md:p-4 p-[4px] border border-zinc-400">Name of Faculty</th>
                    <th class="md:p-4 p-[4px] border border-zinc-400">Title of Project</th>
                    <th class="md:p-4 p-[4px] border border-zinc-400">Funding Amount (Rs.)</th>
                    <th class="md:p-4 p-[4px] border border-zinc-400">End Date</th>
                    <th class="md:p-4 p-[4px] border border-zinc-400">Funding Agency</th>
                </tr>
            </thead>
            <tbody>
                <% if (ongoingProjects && ongoingProjects.length > 0) { %>
                    <% ongoingProjects.forEach((project, index) => { %>
                        <tr class="border border-zinc-400">
                            <td class="md:p-4 p-[4px] text-center border border-zinc-400"><%= index + 1 %></td>
                            <td class="md:p-4 p-[4px] border border-zinc-400"><%= project.faculty %></td>
                            <td class="md:p-4 p-[4px] border border-zinc-400"><%= project.titleofProject %></td>
                            <td class="md:p-4 p-[4px] border border-zinc-400">Rs. <%= project.fundingAmount.toFixed(2) %> Lakh</td>
                            <td class="md:p-4 p-[4px] border border-zinc-400"><%= project.year %></td>
                            <td class="md:p-4 p-[4px] border border-zinc-400"><%= project.sponsoringAgency %></td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="6" class="text-center md:p-4 p-[4px] border border-zinc-400">No ongoing projects available.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
        
        </div>

        <!-- Completed Projects -->
        <h3 class="text-2xl font-semibold mt-8 mb-4">Completed Projects</h3>
        <div class="overflow-x-auto">
          <table class="w-full table-auto border-collapse border border-zinc-400 overflow-hidden lg:text-[1vw] md:text-[1.5vw] text-[2vw]">
            <thead class="bg-gray-200">
              <tr class="border border-zinc-400 bg-[#00457b] text-white">
                    <th class="md:p-4 p-[4px] border border-zinc-400">Sl. No.</th>
                    <th class="md:p-4 p-[4px] border border-zinc-400">Name of Faculty</th>
                    <th class="md:p-4 p-[4px] border border-zinc-400">Title of Project</th>
                    <th class="md:p-4 p-[4px] border border-zinc-400">Funding Amount (Rs.)</th>
                    <th class="md:p-4 p-[4px] border border-zinc-400">End Date</th>
                    <th class="md:p-4 p-[4px] border border-zinc-400">Funding Agency</th>
                </tr>
            </thead>
            <tbody>
                <% if (completedProjects && completedProjects.length > 0) { %>
                    <% completedProjects.forEach((project, index) => { %>
                        <tr class="border border-zinc-400 <%= index % 2 === 0 ? 'bg-gray-50' : 'bg-white' %>">
                            <td class="md:p-4 p-[4px] text-center border border-zinc-400"><%= index + 1 %></td>
                            <td class="md:p-4 p-[4px] border border-zinc-400"><%= project.faculty %></td>
                            <td class="md:p-4 p-[4px] border border-zinc-400"><%= project.titleofProject %></td>
                            <td class="md:p-4 p-[4px] border border-zinc-400">Rs. <%= project.fundingAmount.toFixed(2) %> Lakh</td>
                            <td class="md:p-4 p-[4px] border border-zinc-400"><%= project.year %></td>
                            <td class="md:p-4 p-[4px] border border-zinc-400"><%= project.sponsoringAgency %></td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="6" class="text-center md:p-4 p-[4px] border border-zinc-400">No completed projects available.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
        
        </div>
      </div>
    </div>
  </div>
  <%- include('../partials/footer') %> 
</body>
